= form_tag({controller: 'private/conversations', action: 'create' }, method: :post, remote: true) do
    = hidden_field_tag(:post_id, @post.id)
    = text_area_tag :message_body, nil, class: 'form-control', placeholder: 'Send a message to the user'
    = submit_tag 'Send a message', class: 'btn btn-dark mt-2 rounded-lg form-control mx-auto send-message-to-user'
